	<!--
		When can be "[mon] last[dow]" or "[mon] [dow]>=[dom]" or "[mon] [dom]"
		
		MUMPS
		
		^dcTime("Rule","Iso/US",0,"To")=2006
		^dcTime("Rule","Iso/US",0,"OnWhen")="Apr Sun>=1"
		^dcTime("Rule","Iso/US",0,"OnTime")="2:00"
		^dcTime("Rule","Iso/US",0,"OnOffset")="1:00"
		^dcTime("Rule","Iso/US",0,"OffWhen")="Oct lastSun"
		^dcTime("Rule","Iso/US",0,"OffTime")="2:00"
		^dcTime("Rule","Iso/US",0,"OffOffset")="0"
		^dcTime("Rule","Iso/US",1,"From")=2007
		^dcTime("Rule","Iso/US",1,"OnWhen")="Mar Sun>=8"
		^dcTime("Rule","Iso/US",1,"OnTime")="2:00"
		^dcTime("Rule","Iso/US",1,"OnOffset")="1:00"
		^dcTime("Rule","Iso/US",1,"OffWhen")="Nov Sun>=1"
		^dcTime("Rule","Iso/US",1,"OffTime")="2:00"
		^dcTime("Rule","Iso/US",1,"OffOffset")="0"
		
		^dcTime("Zone","Iso/America/New_York","ZoneTime")="-5:00"
		^dcTime("Zone","Iso/America/New_York","Name")="EST"
		^dcTime("Zone","Iso/America/New_York","DstRule")="US"
		^dcTime("Zone","Iso/America/New_York","DstName")="EDT"
		
	-->
	<Rule Id="Iso/US">
		<Period To="2006">
			<DstOn When="Apr Sun>=1" Time="2:00" Offset="1:00" />
			<DstOff When="Oct lastSun" Time="2:00" Offset="0" />
